<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="1st Service" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/service1Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Hair Cutting"
                android:background="@drawable/input_bg"
                android:padding="10dp" />

            <EditText
                android:id="@+id/service1Price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/input_bg"
                android:hint="Price"
                android:inputType="numberDecimal"
                android:padding="5dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/service1Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Disable" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="2nd Service" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/service2Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Hair Coloring"
                android:background="@drawable/input_bg"
                android:padding="10dp" />

            <EditText
                android:id="@+id/service2Price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/input_bg"
                android:hint="Price"
                android:inputType="numberDecimal"
                android:padding="5dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/service2Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Disable" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="3rd Service" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/service3Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Hair Cutting and Coloring"
                android:background="@drawable/input_bg"
                android:padding="10dp" />

            <EditText
                android:id="@+id/service3Price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/input_bg"
                android:hint="Price"
                android:inputType="numberDecimal"
                android:padding="5dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/service3Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Disable" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>